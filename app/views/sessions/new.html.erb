<h2>ログイン</h2>

<%= form_with(url: login_path, scope: :session, class: 'mt-4') do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <%= f.submit "Log in", class: "btn btn-primary" %>
<% end %>
