<div class="d-flex justify-content-end w-100 m-2">
  <%= form_with url: tasks_path, local: true, method: :get, class: 'form-inline', default_values: params do |f| %>
    <%= f.label :word %>
    <%= f.text_field :word, class: 'form-control mr-2', value: params[:word] %>

    <%= f.label :start_date, class: 'mr-2' %>
    <%= f.date_field :start_date, class: 'form-control mr-2', value: params[:start_date] %>

    <%= f.label :end_date, class: 'mr-2' %>
    <%= f.date_field :end_date, class: 'form-control mr-2', value: params[:end_date] %>

    <%= f.submit '検索', class: 'btn' %>
  <% end %>
</div>
